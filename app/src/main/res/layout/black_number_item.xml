<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_user_circle"
        android:id="@+id/iv_black_number_item_user"/>

    <ImageView
        android:layout_marginRight="5dp"
        android:padding="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_black_number_item_delete"/>

    <TextView
        android:paddingTop="8dp"
        android:layout_toRightOf="@id/iv_black_number_item_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CommunicationText"
        android:text="于成博"
        android:id="@+id/tv_black_number_item_name"/>

    <TextView
        android:layout_toRightOf="@id/tv_black_number_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CommunicationText"
        android:layout_alignBottom="@id/tv_black_number_item_name"
        android:text="(1234567)"
        android:id="@+id/tv_black_number_item_phone_number"/>

    <TextView
        android:layout_alignBottom="@id/iv_black_number_item_user"
        android:layout_alignLeft="@id/tv_black_number_item_name"
        android:paddingBottom="5dp"
        style="@style/CommunicationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哈哈哈"
        android:id="@+id/tv_black_number_item__check_phone_message"/>




</RelativeLayout>
